ScriptAlias /cgi-bin/ "<%= scope.lookupvar('httpd::prefix_dir') %>/cgi-bin/"
<% end -%>

<Files ~ "^\.ht">
    Order allow,deny
    Deny from all
    Satisfy All
</Files>

<Directory />
    Options -FollowSymLinks
    AllowOverride None
</Directory>

<Directory "<%= @www_root %>">
    Options Indexes -FollowSymLinks
    AllowOverride None
    Order allow,deny
    Allow from all
</Directory>

<Directory "<%= scope.lookupvar('httpd::prefix_dir') %>/icons/">
    Options Indexes MultiViews
    AllowOverride None
    Order allow,deny
    Allow from all
</Directory>

<Directory "<%= scope.lookupvar('httpd::prefix_dir') %>/cgi-bin">
    AllowOverride None
    Options None
    Order allow,deny
    Allow from all
</Directory>

<% if @dav_fs_module -%>
<IfModule mod_dav_fs.c>
    # Location of the WebDAV lock database.
    DAVLockDB /var/lib/dav/lockdb
</IfModule>
<% end -%>

<% if @negotiation_module -%>
<IfModule mod_negotiation.c>
  LanguagePriority en ca cs da de el eo es et fr he hr it ja ko ltz nl nn no pl pt pt-BR ru sv zh-CN zh-TW
  ForceLanguagePriority Prefer Fallback

  <% if @include_module -%>
  <IfModule mod_include.c>
    <Directory "<%= scope.lookupvar('httpd::prefix_dir') %>/error">
      AllowOverride None
      Options IncludesNoExec
      <% if @mime_module -%>
      AddOutputFilter Includes html
      AddHandler type-map var<% end -%>
      Order allow,deny
      Allow from all
      LanguagePriority en es de fr
      ForceLanguagePriority Prefer Fallback
    </Directory>
  </IfModule>
  <% end -%>
</IfModule>
<% end -%>

<% if @setenvif_module -%>
