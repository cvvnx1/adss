options {

  directory "<%= scope['named::params::prefix_dir'] %>";
  pid-file "<%= scope['named::params::pid_dir'] %>/named.pid";

# DNS Listening IP and port
  listen-on port <%= scope['named::params::listen_on'] %> { any; };

# Default forward IP
  forward only;
  forwarders {
    <% $i = 0 -%>
    <% while $i < scope['named::params::forwarders'].size do -%>
    <%= scope['named::params::forwarders'][$i] %>;
    <% $i += 1 -%>
    <% end -%>
  };

  allow-query { any; };
  allow-query-cache { any; };

# Close DNS Security, If not exist, add these lines.
  dnssec-enable no;
  dnssec-validation no;
  dnssec-lookaside no;
};

include "<%= scope['named::params::conf_dir'] %>/conf.d/view.conf";
