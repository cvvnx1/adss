class ssh::params {
    case  {
        Solaris: {
             = "openssh"
             = "/etc/ssh/sshd_config"
             = "sshd"
        }
        /(Ubuntu|Debian)/: {
             = "openssh-server"
             = "/etc/ssh/sshd_config"
             = "sshd"
        }
        /(RedHat|CentOS|Fedora)/: {
             = "openssh-server"
             = "/etc/ssh/sshd_config"
             = "sshd"
        }
    }
}
